<%
  form_attributes = {
    builder: ActiveAdmin::FormBuilder,
    url: :update_scale_graph_points_admin_hive,
    method: :post,
  }
%>

<%= semantic_form_for :scale, form_attributes do |f| %>
  <%= f.inputs do %>
    <%= f.input :graph_points, as: :number, label: 'Puntos a graficar', input_html: { value: hive.scale.graph_points } %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: 'Actualizar puntos a graficar' %>
  <% end %>
<% end %>
